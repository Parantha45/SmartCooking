<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartCooking.Pages.AboutPage"
             Title="About"
             BackgroundColor="#FFC56E">
    <Grid RowDefinitions="*, Auto" Padding="20">

        <!-- Main content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="25">
                <!-- App Title -->
                <Label Text="Smart Cooking Assistant"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#333333"/>

                <!-- Version Info -->
                <Label Text="Version: 1.0.0"
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="#333333"/>

                <!-- Description -->
                <Label Text="This is a Smart Cooking Assistant System designed to help you manage your recipes, cooking times, and Give the insturctions to Spice dispenser and Hot plate.And We're going to control the embedded sytem via bluetooth.!!!"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="Black"
                       LineBreakMode="WordWrap"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Credits at the bottom -->
        <Label Grid.Row="1"
               Text="Copyrights: Â©Mechies Group 9 @UOM ,2K23"
               FontSize="16"
               HorizontalOptions="Center"
               VerticalOptions="End"
               TextColor="#333333"/>
    </Grid>
</ContentPage>