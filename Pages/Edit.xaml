<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartCooking.Pages.Edit"
             Title="Edit"
             BackgroundColor="#FFC56E">
    <VerticalStackLayout Spacing="70" Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Label 
            Text="Recipe Saved Sucessfully"
            FontSize="28"
            FontAttributes="Bold"
            TextColor="Tomato"
            HorizontalOptions="Center" 
            HorizontalTextAlignment="Start"
            LineBreakMode="WordWrap"         
            VerticalTextAlignment="Center"/>
        <!-- Cook Now Button -->
        <Button Text="Go to Home >>>>"
        FontSize="40"
        HorizontalOptions="Center"
        BackgroundColor="Lavender"
        TextColor="#333333"
        Clicked="OnGoHomeButtonClicked">

        </Button>
    </VerticalStackLayout>
</ContentPage>